---
import Container from './Container.astro';
import ServiceCardTwo from './ServiceCardTwo.astro';
import { homeTwoServices } from '../data/home-two';

const { heading, cta, items } = homeTwoServices;
---

<section class="pt-90 pb-100 max-991:pt-70 max-991:pb-80 max-767:pt-50 max-767:pb-60">
  <Container>
    <div class="grid grid-cols-[7fr_5fr] items-end gap-30 mb-50 xl:mb-60 max-991:grid-cols-1 max-991:gap-15 max-991:mb-40 max-767:mb-30 max-479:gap-10">
      <div class="reveal flex gap-15">
        <span class="h-2 w-64 shrink-0 rounded-50 bg-brand-primary mt-[28px] max-767:mt-24 max-767:w-30 max-479:mt-18"></span>
        <h2 class="mb-0">{heading.title}</h2>
      </div>
      <p class="reveal mt-0 mb-5">{heading.description}</p>
    </div>

    <div class="grid grid-cols-3 gap-30 max-991:grid-cols-2 max-767:grid-cols-1">
      {items.map((item) => (
        <div class="reveal-grow" style="transition-delay: 0.3s">
          <ServiceCardTwo {...item} />
        </div>
      ))}
    </div>

    <div class="reveal mt-60 flex justify-center max-991:mt-40 max-479:mt-30">
      <a
        href={cta.href}
        class="flex items-center gap-8.5 bg-ink-black px-24 py-12 text-button tracking-button text-surface-white transition-colors duration-300 hover:bg-brand-primary"
      >
        <span>{cta.label}</span>
        <svg viewBox="0 0 16 16" class="relative mt-[3px] h-16 w-16" aria-hidden="true">
          <path
            d="M9.62012 3.95331L13.6668 7.99998L9.62012 12.0466"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
          <path
            d="M2.33325 8H13.5533"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      </a>
    </div>
  </Container>
</section>

