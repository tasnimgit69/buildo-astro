---
import Container from './Container.astro';
import SectionHeading from './SectionHeading.astro';
import BlogCard from './BlogCard.astro';
import { blog } from '../data/blog';

const { heading, cta, grid, list } = blog;
---

<section class="relative bg-surface-warm pt-90 pb-100 max-991:pb-80 max-991:pt-70 max-767:pb-60 max-767:pt-50">
  <Container>
    <div class="reveal grid grid-cols-[7fr_5fr] gap-30 items-end mb-50 max-991:grid-cols-1 max-991:gap-15 max-991:mb-40 max-767:mb-30 max-479:gap-10">
      <SectionHeading
        subtitle={heading.subtitle}
        title={heading.title}
        titleMargin="zero"
        titleClass="xl:text-[46px] xl:leading-[55.2px] max-991:text-[38px] max-991:leading-[48px] max-767:text-[32px] max-767:leading-[42px] max-479:text-[28px] max-479:leading-[36px]"
      />
      <div class="text-right mb-5 max-991:text-left">
        <a
          href={cta.href}
          class="inline-flex items-center justify-center bg-ink-body px-24 py-12 text-button text-surface-white transition hover:bg-brand-primary"
        >
          {cta.label}
        </a>
      </div>
    </div>

    <div class="grid grid-cols-[1fr_1fr] gap-30 max-991:grid-cols-1">
      <div>
        {grid.map((post) => (
          <div class="reveal">
            <BlogCard {...post} />
          </div>
        ))}
      </div>
      <div>
        {list.map((post, index) => (
          <div class:list={['reveal', index < list.length - 1 && 'mb-16']}>
            <BlogCard {...post} variant="list" />
          </div>
        ))}
      </div>
    </div>
  </Container>
</section>
