---
import { Image } from 'astro:assets';
const { title, date, href, image, variant = 'grid' } = Astro.props;
const isGrid = variant === 'grid';
const isList = variant === 'list';
---

<article
  class:list={[
    'group bg-surface-white transition-[box-shadow] duration-300',
    isGrid && 'hover:shadow-team',
    isList && 'flex items-center gap-20 pr-20 hover:shadow-md max-767:block max-767:pr-0'
  ]}
>
  <div
    class:list={[
      'overflow-hidden',
      isList && 'flex-[0_0_165px] max-767:flex-[auto]'
    ]}
  >
    <a href={href} class="block">
      <Image
        src={image.src}
        alt={image.alt}
        class="block w-full h-auto transition-transform duration-300 group-hover:scale-110"
        loading="lazy"
        decoding="async"
        width={isList ? 165 : 570}
      />
    </a>
  </div>

  <div
    class:list={[
      'flex gap-10',
      isGrid && 'items-end justify-between pt-25 px-24 pb-24',
      isList && 'flex-wrap items-end py-10 xl:justify-between max-767:px-20 max-767:pt-[23px] max-767:pb-25'
    ]}
  >
    <div
      class:list={[
        isGrid && 'flex-[0_0_80%]',
        isList && 'flex-[0_0_100%] xl:flex-[0_0_75%]'
      ]}
    >
      <div class="mb-12 flex flex-wrap gap-12 max-767:mb-10">
        <div class="w-24 mt-[1px] leading-[1em] text-brand-primary">
          <svg viewBox="0 0 24 23" class="w-full" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
