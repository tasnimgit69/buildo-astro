---
import { Image } from 'astro:assets';
import Container from './Container.astro';
import { homeThreeBlog } from '../data/home-three';

const { heading, cta, grid, list, shape } = homeThreeBlog;
---

<section class="blog-section relative pt-100 pb-100 max-991:pt-80 max-991:pb-80 max-767:pt-60 max-767:pb-60">
  <Container>
    <!-- Section Header - Centered -->
    <div class="reveal mb-50 text-center max-991:mb-40 max-767:mb-30">
      <!-- Subtitle with shapes -->
      <div class="mb-12 flex flex-wrap items-center justify-center gap-15 max-767:gap-10">
        <span class="h-2 w-64 rounded-50 bg-brand-primary max-767:w-50 max-479:w-30"></span>
        <span class="text-label font-semibold tracking-subtitle text-brand-primary">
          {heading.subtitle}
        </span>
        <span class="h-2 w-64 rounded-50 bg-brand-primary max-767:w-50 max-479:w-30"></span>
      </div>
      <!-- Title -->
      <h2 class="mb-0 text-h2 tracking-h2 text-ink-heading xl:text-[46px] xl:leading-[55.2px] max-991:text-[38px] max-991:leading-[48px] max-767:text-[32px] max-767:leading-[42px] max-479:text-[28px] max-479:leading-[36px]">
        {heading.title}
      </h2>
    </div>

    <!-- Blog Wrap - Two Columns Grid -->
    <div class="blog-wrap grid grid-cols-2 gap-30 max-991:grid-cols-1 max-991:gap-24 max-767:gap-20">
      <!-- Left Column - Grid Posts (Featured) -->
      <div class="flex flex-col gap-30 max-991:gap-24 max-767:gap-20">
        {grid.map((post) => (
          <article class="reveal single-blog-wrapper-two overflow-hidden rounded-8 border border-solid border-neutral-200 bg-[#f5f4ea] transition-shadow duration-300 hover:shadow-[0_8px_65px_#19233f14]">
            <!-- Blog Image -->
            <div class="blog-image-wrap overflow-hidden">
              <a href={post.href} class="block">
                <Image
                  src={post.image.src}
                  alt={post.image.alt}
                  class="blog-image block h-auto w-full object-cover transition-transform duration-300"
                  loading="lazy"
                  decoding="async"
                  width={520}
                  height={260}
                />
              </a>
            </div>
            <!-- Blog Content -->
            <div class="blog-content-wrap-two flex items-end justify-between gap-10 p-[25px_24px_24px] max-767:p-[23px_20px_25px] max-479:p-[20px_18px_22px]">
              <div class="blog-content flex-[0_0_80%] max-767:flex-[0_0_70%] max-479:flex-[0_0_65%]">
                <!-- Meta -->
                <div class="blog-meta-wrap mb-12 flex flex-wrap items-center gap-12 max-767:mb-10 max-479:gap-10">
                  <span class="blog-meta-icon mt-[1px] w-24 leading-[1em] text-brand-primary max-479:w-20">
                    <svg viewBox="0 0 24 23" fill="currentColor" class="h-auto w-full" aria-hidden="true">
