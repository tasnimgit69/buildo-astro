---
import Container from './Container.astro';
import BlogCard from './BlogCard.astro';
import { homeTwoBlog } from '../data/home-two';

const { heading, cta, grid, list } = homeTwoBlog;
---

<section class="bg-surface-gray pt-100 pb-100 max-991:pt-80 max-991:pb-80 max-767:pt-60 max-767:pb-60">
  <Container>
    <div class="reveal text-center mb-50 max-991:mb-40 max-767:mb-30">
      <span class="inline-block h-2 w-64 rounded-50 bg-brand-primary mb-10"></span>
      <h2 class="mb-0 xl:text-[46px] xl:leading-[55.2px]">{heading.title}</h2>
    </div>

    <div class="grid grid-cols-[1fr_1fr] gap-30 max-991:grid-cols-1">
      <div>
        {grid.map((post) => (
          <div class="reveal">
            <BlogCard {...post} />
          </div>
        ))}
      </div>
      <div>
        {list.map((post, index) => (
          <div class:list={['reveal', index < list.length - 1 && 'mb-16']}>
            <BlogCard {...post} variant="list" />
          </div>
        ))}
      </div>
    </div>

    <div class="reveal mt-60 flex justify-center max-991:mt-40 max-767:mt-30">
      <a
        href={cta.href}
        class="flex items-center gap-8.5 bg-ink-black px-24 py-12 text-button tracking-button text-surface-white transition-colors duration-300 hover:bg-brand-primary"
      >
        <span>{cta.label}</span>
        <svg viewBox="0 0 16 16" class="relative mt-[3px] h-16 w-16" aria-hidden="true">
          <path
            d="M9.62012 3.95331L13.6668 7.99998L9.62012 12.0466"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
          <path
            d="M2.33325 8H13.5533"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      </a>
    </div>
  </Container>
</section>
