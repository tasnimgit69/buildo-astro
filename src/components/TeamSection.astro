    image: { src: resolveImage('/images/team-1-5.webp'), alt: 'Charles Brown' },
    bio: 'Charles leads masonry work across the studio, shaping thoughtful structures that connect builders and clients.',
    socials: { facebook: '#', instagram: '#', twitter: '#' },
    skills: [
      { label: 'Leadership', value: '90%' },
      { label: 'Communication', value: '85%' },
      { label: 'Design Strategy', value: '92%' },
      { label: 'Execution', value: '88%' }
    ]
  },
  {
    name: 'Lorena Doran',
    role: 'Craftsmen',
    image: { src: resolveImage('/images/team-1-6.webp'), alt: 'Lorena Doran' },
    bio: 'Lorena oversees multi-site delivery and ensures every project meets Buildo quality standards.',
    socials: { facebook: '#', instagram: '#', twitter: '#' },
    skills: [
      { label: 'On-site Planning', value: '93%' },
      { label: 'Safety', value: '97%' },
      { label: 'Scheduling', value: '88%' },
      { label: 'Quality Control', value: '91%' }
    ]
  },
  {
    name: 'Ana Carrillo',
    role: 'Architects',
    image: { src: resolveImage('/images/team-1-7.webp'), alt: 'Ana Carrillo' },
    bio: 'Ana architects modern, sustainable structures with a focus on longevity and craft.',
    socials: { facebook: '#', instagram: '#', twitter: '#' },
    skills: [
      { label: 'Concept Design', value: '95%' },
      { label: 'Sustainability', value: '90%' },
      { label: 'Project Vision', value: '92%' },
      { label: 'Detailing', value: '89%' }
    ]
  }
];

// Process items to extract string URLs from ImageMetadata objects
const processedItems = homeTeamItems.map(item => ({
  ...item,
  image: {
    src: typeof item.image.src === 'string' ? item.image.src : item.image.src.src,
    alt: item.image.alt
  }
}));
---

<section class="relative pt-100 pb-100 max-991:pt-80 max-991:pb-80 max-767:pt-60 max-767:pb-60">
  <Container>
    <div class="reveal grid grid-cols-[7fr_5fr] items-end gap-30 mb-50 max-991:mb-30 max-991:grid-cols-1 max-991:gap-15 max-991:items-start max-767:gap-10">
      <div>
        <div class="mb-12 flex flex-wrap items-center gap-15">
          <span class="h-2 w-64 rounded-50 bg-brand-primary max-767:w-30"></span>
          <span class="text-label font-semibold tracking-subtitle text-brand-primary">
            {heading.subtitle}
          </span>
        </div>
        <h2 class="mb-0 text-h2 tracking-h2 text-ink-heading xl:text-[46px] xl:leading-[55.2px] max-991:text-[38px] max-991:leading-[48px] max-767:text-[32px] max-767:leading-[42px] max-479:text-[28px] max-479:leading-[36px]">
          {heading.title}
        </h2>
      </div>
      <div>
        <p class="m-0 text-body tracking-body text-ink-body">{heading.description}</p>
      </div>
    </div>

    <div class="team-wrap">
      <div class="grid grid-cols-3 gap-30 max-991:grid-cols-2 max-479:grid-cols-1">
      {homeTeamItems.map((member, index) => (
        <div class="reveal-grow" style={`transition-delay: ${index * 0.15}s`}>
          <TeamCard {...member} index={index} />
        </div>
