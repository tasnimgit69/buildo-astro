---
import Container from './Container.astro';
import ProjectCardTwo from './ProjectCardTwo.astro';
import { homeTwoProjects } from '../data/home-two';

const { heading, cta, items } = homeTwoProjects;
const leftItem = items[0];
const rightItems = items.slice(1);
---

<section class="bg-ink-black pt-100 pb-100 max-991:pt-80 max-991:pb-80 max-767:pt-60 max-767:pb-60">
  <Container>
    <div class="reveal-grow mb-50 text-center max-991:mb-40 max-767:mb-30">
      <span class="mb-10 inline-block h-2 w-64 rounded-50 bg-brand-primary"></span>
      <h2 class="mb-0 text-surface-white">{heading.title}</h2>
    </div>

    <div class="grid grid-cols-2 gap-30 max-767:grid-cols-1">
      <div class="reveal-grow" style="transition-delay: 0.15s">
        <ProjectCardTwo {...leftItem} fullHeight />
      </div>
      <div class="grid gap-30">
        {rightItems.map((item, index) => (
          <div class="reveal-grow" style={`transition-delay: ${(index + 2) * 0.15}s`}>
            <ProjectCardTwo {...item} />
          </div>
        ))}
      </div>
    </div>

    <div class="reveal-grow mt-50 flex justify-center max-991:mt-40 max-767:mt-30" style="transition-delay: 0.6s">
      <a
        href={cta.href}
        class="flex items-center gap-8.5 bg-surface-white px-24 py-12 text-button tracking-button text-ink-black transition-colors duration-300 hover:bg-brand-primary hover:text-surface-white"
      >
        <span>{cta.label}</span>
        <svg viewBox="0 0 16 16" class="relative mt-[3px] h-16 w-16" aria-hidden="true">
          <path
            d="M9.62012 3.95331L13.6668 7.99998L9.62012 12.0466"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
          <path
            d="M2.33325 8H13.5533"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      </a>
    </div>
  </Container>
</section>
