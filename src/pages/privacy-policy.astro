---
import PageLayout from '../layouts/PageLayout.astro';
import BreadcrumbHero from '../components/BreadcrumbHero.astro';
import LegalSection from '../components/LegalSection.astro';
import { legal } from '../data/legal';
import { site } from '../data/site';
---

<PageLayout title={`Privacy Policy | ${site.name}`} description="Read our privacy policy to understand how we collect, use, and protect your personal information when you use our website and services." headerLogoVariant="black" headerMenuHoverVariant="secondary" footerVariant="light">
  <BreadcrumbHero title={legal.privacy.title} />
  <LegalSection title={legal.privacy.title} sections={legal.privacy.sections} footer={legal.privacy.footer} variant="privacy" />
</PageLayout>

