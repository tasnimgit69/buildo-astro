<style is:global>
  html {
    scroll-behavior: smooth;
  }

  /* Sidebar: fixed left panel */
  .style-guide-panel {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10;
    width: 25vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
    padding: 75px 35px;
    box-sizing: border-box;
  }

  /* Content area: padding-left clears the fixed sidebar */
  .style-guide-content {
    padding-left: calc(25vw + 50px);
    padding-right: 50px;
    margin-top: 100px;
  }

  /* Blockquote background image */
  .style-guide-blockquote {
    background-image: url('../../assets/images/blog-quote.png');
    background-position: 91% 31px;
    background-repeat: no-repeat;
    background-size: auto;
  }

  @media screen and (min-width: 1280px) {
    .style-guide-blockquote {
      background-position: 91% 61px;
    }
  }

  @media screen and (max-width: 991px) {
    .style-guide-panel {
      padding-left: 15px;
      padding-right: 15px;
    }

    .style-guide-content {
      padding-left: calc(25vw + 20px);
      padding-right: 20px;
      margin-top: 80px;
    }
  }

  @media screen and (max-width: 767px) {
    .style-guide-panel {
      position: relative;
      width: 100%;
      height: auto;
      padding-top: 50px;
      padding-bottom: 35px;
    }

    .style-guide-content {
      padding-left: 20px;
      margin-top: 60px;
    }

    .style-guide-blockquote {
      background-position: 95% 31px;
    }
  }

  @media screen and (max-width: 479px) {
    .style-guide-panel {
      padding-top: 52px;
      padding-bottom: 40px;
    }

    .style-guide-blockquote {
      background-position: 50% 30px;
    }
  }
</style>
