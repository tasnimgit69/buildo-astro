---
import PageLayout from '../layouts/PageLayout.astro';
import BreadcrumbHero from '../components/BreadcrumbHero.astro';
import LegalSection from '../components/LegalSection.astro';
import { legal } from '../data/legal';
import { site } from '../data/site';
---

<PageLayout title={`Terms & Conditions | ${site.name}`} description="Review the terms and conditions governing the use of our website, services, and intellectual property. Updated and effective." headerLogoVariant="black" headerMenuHoverVariant="secondary" footerVariant="light">
  <BreadcrumbHero title="Terms and Conditions" crumb="Terms and Conditions" hideShapes sectionClass="pt-[149px] pb-[315px] max-991:pb-[222px] max-767:pb-[150px] max-479:pb-[100px] max-479:pt-[120px]" />
  <LegalSection title={legal.terms.title} sections={legal.terms.sections} />
</PageLayout>

