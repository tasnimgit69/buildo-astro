---
import PageLayout from '../layouts/PageLayout.astro';
import { resolveImage } from '../utils/resolveImage';
import Hero from '../components/Hero.astro';
import ServicesSection from '../components/ServicesSection.astro';
import AboutSection from '../components/AboutSection.astro';
import ProjectsSection from '../components/ProjectsSection.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import TeamSection from '../components/TeamSection.astro';
import BlogSection from '../components/BlogSection.astro';
import CtaSection from '../components/CtaSection.astro';
---

<PageLayout
  title="Buildo - Construction Company Website Template"
  description="Expert construction services for residential and commercial projects. Trusted builders delivering quality craftsmanship on time and on budget."
  image={resolveImage('/images/og-default.webp')}
>
	<Hero />
	<ServicesSection />
	<AboutSection />
	<ProjectsSection limit={3} />
	<TestimonialsSection />
	<TeamSection />
	<BlogSection />
	<CtaSection />
</PageLayout>

