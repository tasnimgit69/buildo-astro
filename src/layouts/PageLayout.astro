---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { resolveImage } from '../utils/resolveImage';

const {
  title = 'Buildo',
  description = '',
  url = '',
  image = resolveImage('/images/og-default.jpg'),
  footerPaddingTop,
  footerVariant,
  headerLogoVariant,
  headerMenuHoverVariant
} = Astro.props;
---

<BaseLayout title={title} description={description} url={url} image={image}>
  <a
    href="#main-content"
    class="sr-only focus:not-sr-only focus:absolute focus:left-20 focus:top-20 focus:z-50 focus:rounded-8 focus:bg-surface-white focus:px-16 focus:py-10 focus:text-body focus:text-ink-body"
  >
    Skip to content
  </a>
  <Header logoVariant={headerLogoVariant} menuHoverVariant={headerMenuHoverVariant} />
  <main id="main-content">
    <slot />
  </main>
  <Footer paddingTop={footerPaddingTop} variant={footerVariant} />
</BaseLayout>

